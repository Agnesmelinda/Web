ice, quantity, description, pharmacies } = req.body;    if (name !== undefined) med.name = name;    if (price !== undefined) med.price = +price;    if (quantity !== undefined) med.quantity = +quantity;    if (description !== undefined) med.description = description;    if (pharmacies !== undefined) {      try {        med.pharmacies = typeof pharmacies === 'string' && pharmacies.startsWith('[') ? JSON.parse(pharmacies) : pharmacies.split(',');      } catch {        med.pharmacies = pharmacies.split ? pharmacies.split(',') : [];      }    }    if (req.file) med.imageUrl = `/uploads/${req.file.filename}`;    await med.save();    res.json(med);  } catch (err) {    console.error(err);    res.status(500).json({ message: 'Server error' });  }});// Deleterouter.delete('/:id', auth, async (req, res) => {  try {    const med = await Medicine.findById(req.params.id);    if (!med) return res.status(404).json({ message: 'Not found' });    await med.remove();    res.json({ message: 'Deleted' });  } catch (err) {    res.status(500).json({ message: 'Server error' });  }});// Get all medicines (populate pharmacies)router.get('/', async (req, res) => {  try {    const list = await Medicine.find().populate('pharmacies').sort({ createdAt: -1 });    res.json(list);  } catch (err) {    res.status(500).json({ message: 'Server error' });  }});// Search endpoint: /api/medicines/search?q=paracetamolrouter.get('/search', async (req, res) => {  try {    const q = req.query.q || '';    const regex = new RegExp(q, 'i');    const list = await Medicine.find({ name: { $regex: regex } }).populate('pharmacies');    res.json(list);  } catch (err) {    res.status(500).json({ message: 'Server error' });  }});// Get single medicinerouter.get('/:id', async (req, res) => {  try {    const med = await Medicine.findById(req.params.id).populate('pharmacies');    if (!med) return res.status(404).json({ message: 'Not found' });    res.json(med);  } catch (err) {    res.status(500).json({ message: 'Server error' });  }});module.exports = router;


